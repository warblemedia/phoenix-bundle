{% import "WarbleMediaPhoenixBundle:Macro:metrics.html.twig" as Metrics %}

<div class="card card-outline-success text-xs-center">
    <div class="card-header">Yearly Recurring Revenue</div>
    <div class="card-block">
        <div style="font-size: 24px;">
            {{ yearlyRecurringRevenue|currency }}
        </div>

        {# TODO: Consider whether these provide enough value to keep #}
        {% if yearlyRecurringRevenue and lastMonthsIndicators %}
            <div style="font-size: 12px;">
                {{ Metrics.percentChange(yearlyRecurringRevenue, lastMonthsIndicators.yearlyRecurringRevenue) }}% From Last Month
            </div>
        {% endif %}

        {% if yearlyRecurringRevenue and lastYearsIndicators %}
            <div style="font-size: 12px;">
                {{ Metrics.percentChange(yearlyRecurringRevenue, lastYearsIndicators.yearlyRecurringRevenue) }}% From Last Year
            </div>
        {% endif %}
    </div>
</div>
