<!DOCTYPE html>
<html lang="en">
<head>
    {% block head %}
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{% block title %}{% endblock %}</title>
        {% block styles %}
            <link rel="stylesheet" href="{{ asset('bundles/warblemediaphoenix/css/font-awesome.css') }}">
            <link rel="stylesheet" href="{{ asset('bundles/warblemediaphoenix/css/bootstrap.css') }}">
            <link rel="stylesheet" href="{{ asset('bundles/warblemediaphoenix/css/phoenix.css') }}">
        {% endblock %}
    {% endblock %}
</head>
<body>
    {% block body %}
        {% block navbar %}
            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                {% include "WarbleMediaPhoenixBundle:Navigation:user.html.twig" %}
            {% else %}
                {% include "WarbleMediaPhoenixBundle:Navigation:guest.html.twig" %}
            {% endif %}
        {% endblock %}

        {% block main %}
            <div class="container">
                {% block content %}{% endblock %}
            </div>
        {% endblock %}

        {% block scripts %}
            <script src="{{ asset('bundles/warblemediaphoenix/js/vendor/jquery.js') }}"></script>
            <script src="{{ asset('bundles/warblemediaphoenix/js/vendor/tether.js') }}"></script>
            <script src="{{ asset('bundles/warblemediaphoenix/js/vendor/bootstrap.js') }}"></script>
        {% endblock %}
    {% endblock %}
</body>
</html>
