<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                  http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <mapped-superclass name="WarbleMedia\PhoenixBundle\Model\Subscription">

        <many-to-one target-entity="WarbleMedia\PhoenixBundle\Model\CustomerInterface" field="customer">
            <join-column name="customer_id" referenced-column-name="id" nullable="true" />
            <cascade>
                <cascade-persist />
            </cascade>
        </many-to-one>

    </mapped-superclass>

</doctrine-mapping>
